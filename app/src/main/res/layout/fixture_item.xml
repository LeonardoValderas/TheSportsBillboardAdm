<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conteiner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

        <LinearLayout
            android:id="@+id/linearDateHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewDateHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center"
                android:text="DATE"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearDateHour"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewLocalTeam"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewLocalResult"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewVisitResult"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="3"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/textViewTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Inicia"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewVisitTeam"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNameTeams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeCenter"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLocalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center"
                android:padding="5dp"
                android:text="Name Local Team"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="5dp"
                android:text="VS"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/textViewVisitName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center"
                android:padding="5dp"
                android:text="Name Visit Team"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@color/cardview_dark_background" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearFieldMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearNameTeams"
            android:orientation="vertical">

            <View
                android:id="@+id/viewDivider"
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#ff6a6a" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFieldMatch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Gimnasio Adeful"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textColor="@color/colorCardViewFixture"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="-"
                    android:textColor="@color/colorCardViewFixture"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Ohiggins 1000"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textColor="@color/colorCardViewFixture"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewObservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Observation"
                android:textColor="@color/colorCardViewFixture"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>