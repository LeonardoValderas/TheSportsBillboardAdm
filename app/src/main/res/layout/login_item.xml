<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/relativeBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/background_gradient">

        <LinearLayout
            android:id="@+id/linearUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTopFixture"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="USER"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearUser"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Pass"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:textColor="@color/colorSecondary_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="activo"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:textColor="@color/colorSecondary_text"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>