<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="BaseButton" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:background">@drawable/custom_select_button</item>
        <item name="android:textColor">@color/colorWhiteGrey</item>
        <item name="android:padding">@dimen/layout_padding_default</item>
        <item name="android:textSize">@dimen/button_size</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->
</resources>
